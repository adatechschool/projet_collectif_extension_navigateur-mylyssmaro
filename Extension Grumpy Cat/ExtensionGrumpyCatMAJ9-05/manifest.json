{
    "manifest_version": 3,
    "name": "backgroundGoogle",
    "description": "Add a custom background to Google.com",
    "version": "1.0",
    "icons": {
        "16": "./images/logo-16.png",
        "48": "./images/logo-48.png",
        "128": "./images/logo-128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "change-image.js"
            ]
        }
    ]
}